<!DOCTYPE html>
<html>
<head>
	<title>@ViewBag.Title</title>
	<link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
	<script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
</head>
<body>
    <div class="page">
        <div id="header">
            <div id="title">
                <h1>Contoso University</h1>
            </div>

            <div id="logindisplay">
                @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
        </div>
        <div id="main">
            @RenderBody()
        </div>
        <div id="footer">
        </div>
    </div>
    <div id="menucontainer">
        <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/5/55/Overwatch_circle_logo.svg/1200px-Overwatch_circle_logo.svg.png" alt="Alternate Text" style="margin-left: 10px; margin-right: 10px; margin-top: 10px; width: 70px; height: 70px; border-bottom: 1px solid; padding-bottom: 5px"/>
        <div id="menu">
            @Html.ActionLink(" ", "Index", "Home", new { @id = "btnHome" })
            <p> </p>
            @Html.ActionLink(" ", "About", "Home", new { @id = "btnAbout" })
            <p> </p>
            @Html.ActionLink(" ", "Index", "Students", new { @id = "btnStudents" })
            <p> </p>
            @Html.ActionLink(" ", "Index", "Courses", new { @id = "btnCources" })
            <p> </p>
            @Html.ActionLink(" ", "Index", "Instructor", new { @id = "btnInst" })
            <p> </p>
            @Html.ActionLink(" ", "Index", "Department", new { @id = "btnDepart" })
        </div>
    </div>
</body>
</html>